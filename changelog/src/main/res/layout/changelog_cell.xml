<?xml version="1.0" encoding="utf-8"?>
<ir.am3n.needtool.views.A3LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    tools:ignore="HardcodedText">

    <ir.am3n.needtool.views.A3ImageView
        android:id="@+id/imgDesc"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top"
        android:layout_marginRight="4dp"
        android:padding="4dp"
        tools:srcCompat="@drawable/ic_changelog_item_fix" />

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingEnd="32dp"
        android:text="Fix bug" />

</ir.am3n.needtool.views.A3LinearLayout>